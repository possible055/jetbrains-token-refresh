{
  "scheduler": {
    "timezone": "Asia/Taipei",
    "max_workers": 3,
    "coalesce": true,
    "max_instances": 1,
    "misfire_grace_time": 300
  },
  "jobs": {
    "token_refresh": {
      "enabled": true,
      "interval_minutes": 5,
      "description": "自動檢查並刷新過期的 JWT tokens"
    },
    "quota_check": {
      "enabled": true,
      "interval_minutes": 2,
      "description": "檢查所有帳戶的配額使用情況"
    },
    "health_check": {
      "enabled": true,
      "interval_minutes": 1,
      "description": "Daemon 健康檢查和狀態更新"
    }
  },
  "logging": {
    "level": "INFO",
    "max_history": 100,
    "status_update_interval": 30
  },
  "paths": {
    "status_file": "logs/daemon_status.json",
    "command_file": "logs/daemon_commands.json",
    "log_directory": "logs"
  }
}
